<user>
  <primary_id><%= user.primary_id %></primary_id>
  <% if user.first_name %><first_name><%= user.first_name %></first_name><% end %>
  <% if user.middle_name %><middle_name><%= user.middle_name %></middle_name><% end %>
  <% if user.last_name %><last_name><%= user.last_name %></last_name><% end %>
  <% if user.user_group %><user_group><%= user.user_group %></user_group><% end %>
  <% if user.campus_code %><campus_code><%= user.campus_code %></campus_code><% end %>
  <% if user.expiry_date %><expiry_date><%= user.expiry_date %></expiry_date><% end %>
  <purge_date><% defaults.purge_date %></purge_date>
  <% if user.has_contact_info? %><contact_info>
    <% if user.has_primary_address? %><addresses>
      <address preferred="true">
        <% if user.primary_address_line_1 %><line1><%= user.primary_address_line_1 %></line1><% end %>
        <% if user.primary_address_line_2 %><line2><%= user.primary_address_line_2 %></line2><% end %>
        <% if user.primary_address_city %><city><%= user.primary_address_city %></city><% end %>
        <% if user.primary_address_state_province %><state_province><%= user.primary_address_state_province %></state_province><% end %>
        <% if user.primary_address_postal_code %><postal_code><%= user.primary_address_postal_code %></postal_code><% end %>
        <% if user.primary_address_country %><country><%= user.primary_address_country %></country><% end %>
        <address_types>
          <address_type><%= defaults.preferred_address_type %></address_type>
        </address_types>
      </address>
      <% if user.has_secondary_address? %><address>
        <% if user.secondary_address_line_1 %><line1><%= user.secondary_address_line_1 %></line1><% end %>
        <% if user.secondary_address_line_2 %><line2><%= user.secondary_address_line_2 %></line2><% end %>
        <% if user.secondary_address_city %><city><%= user.secondary_address_city %></city><% end %>
        <% if user.secondary_address_state_province %><state_province><%= user.secondary_address_state_province %></state_province><% end %>
        <% if user.secondary_address_postal_code %><postal_code><%= user.secondary_address_postal_code %></postal_code><% end %>
        <% if user.secondary_address_country %><country><%= user.secondary_address_country %></country><% end %>
        <address_types>
          <address_type><%= defaults.secondary_address_type %></address_type>
        </address_types>
      </address><% end %>
    </addresses><% end %>
    <% if user.email %><emails>
      <email preferred="true">
        <email_address><%= user.email %></email_address>
        <email_types>
          <email_type><%= defaults.preferred_email_type %></email_type>
        </email_types>
      </email>
    </emails><% end %>
    <% if user.primary_address_phone %><phones>
      <phone preferred="true" preferred_sms="true">
        <phone_number><%= user.primary_address_phone %></phone_number>
        <phone_types>
          <phone_type><%= defaults.preferred_phone_type %></phone_type>
        </phone_types>
      </phone>
    </phones><% end %>
  </contact_info><% end %>
  <% if user.has_additional_identifiers? %><user_identifiers>
    <% if user.barcode %><user_identifier>
        <id_type><%= defaults.barcode_type %></id_type>
        <value><%= user.barcode %></value>
      </user_identifier><% end %>
    <% if user.secondary_id %><user_identifier>
      <id_type><%= defaults.secondary_id_type %></id_type>
      <value><%= user.secondary_id %></value>
    </user_identifier><% end %>
  </user_identifiers><% end %>
</user>